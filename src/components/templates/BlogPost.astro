---
const { post } = Astro.props;
---

<div class="mb-10 p-6 rounded-lg shadow-xl flex flex-col md:flex-row gap-8 items-center">
  <div class="w-full md:w-1/3">
    <a href={`/blog/${post.slug}`} class="block rounded-lg overflow-hidden">
      <img
        src={post.data.image.url}
        alt={post.data.image.alt || 'Imagen del post'}
        class="w-full h-auto aspect-video object-cover rounded-lg transform transition-transform duration-300 hover:scale-105"
      />
    </a>
  </div>
  <div class="w-full md:w-2/3">
    <a href={`/blog/${post.slug}`} class="no-underline block">
      <h2 class="text-2xl font-semibold text-gray-900 hover:text-blue-600 transition-colors duration-200 mb-2">
        {post.data.title}
      </h2>
    </a>
    <p class="text-lg text-gray-700 py-4">
      {post.data.description}
    </p>
    <div class="flex justify-end mt-2">
      <a href={`/blog/${post.slug}`} class="no-underline">
        <button class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition-colors duration-300 cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
          Leer más...
        </button>
      </a>
    </div>
    <div class="flex items-center text-base text-gray-600 mt-4">
      <span class="mr-2" aria-hidden="true">
        <i class="fa-solid fa-calendar-days"></i>
      </span>
      <span class="sr-only">Fecha de publicación:</span>
      <span>{post.data.pubDate.toLocaleDateString('es-ES')}</span>
      <span class="mx-3" aria-hidden="true">•</span>
      <span class="mr-2" aria-hidden="true">
        <i class="fa-solid fa-user"></i>
      </span>
      <span class="sr-only">Autor:</span>
      <span>{post.data.author}</span>
    </div>
  </div>
</div>